# Nginx Configuration for Email Classification Correction UI
# Feature: 003-correction-ui
# Purpose: Serve Vue 3 SPA with proper routing and MIME types

events {
  worker_connections 1024;
}

http {
  # MIME types
  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  # Logging
  access_log /var/log/nginx/access.log;
  error_log /var/log/nginx/error.log;

  # Performance
  sendfile on;
  tcp_nopush on;
  tcp_nodelay on;
  keepalive_timeout 65;
  types_hash_max_size 2048;

  # Gzip compression
  gzip on;
  gzip_vary on;
  gzip_proxied any;
  gzip_comp_level 6;
  gzip_types
    text/plain
    text/css
    text/xml
    text/javascript
    application/json
    application/javascript
    application/xml+rss
    application/rss+xml
    font/truetype
    font/opentype
    application/vnd.ms-fontobject
    image/svg+xml;

  server {
    listen 80;
    server_name localhost;

    # Root directory (static files from Vite build)
    root /usr/share/nginx/html;
    index index.html;

    # SPA routing: serve index.html for all routes
    # This enables Vue Router to handle client-side routing
    location / {
      try_files $uri $uri/ /index.html;
    }

    # Cache static assets (JS, CSS, fonts, images)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
      expires 1y;
      add_header Cache-Control "public, immutable";
    }

    # Don't cache index.html (ensures latest version loaded)
    location = /index.html {
      add_header Cache-Control "no-cache, no-store, must-revalidate";
      add_header Pragma "no-cache";
      add_header Expires "0";
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Error pages
    error_page 404 /index.html;
    error_page 500 502 503 504 /index.html;
  }
}

# ============================================================================
# Configuration Notes
# ============================================================================
#
# SPA Routing:
# - All requests serve index.html to allow Vue Router to handle routing
# - Without this, refreshing /classification/123 would return 404
#
# Caching Strategy:
# - Static assets (JS/CSS): Cache for 1 year with immutable flag
# - index.html: Never cache (ensures new deployments load immediately)
#
# Security Headers:
# - X-Frame-Options: Prevent clickjacking
# - X-Content-Type-Options: Prevent MIME sniffing
# - X-XSS-Protection: Enable browser XSS protection
#
# Performance:
# - Gzip compression reduces bundle size by ~70%
# - Sendfile and tcp optimizations for faster transfers
#
# Local Network Only:
# - No SSL/HTTPS configuration (not needed for local network)
# - If exposing to internet, add SSL certificates and update to listen 443
